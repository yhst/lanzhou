<h2>修改密码</h2>
<br/>
<pre>
提醒:<br>
更改密码前，请输入您的原始密码...
</pre>
<br/>

<%= error_messages_for 'user' %>
<%= form_tag (:action => "update_password"  )%>
<!--[form:user]-->
<table width="100%" cellspacing="4" cellpadding="4" border="0" align="center" bgcolor="#f0f0f0">
<tbody>
<tr>
<td width="15%">原密码:</td>
<td><%= text_field 'user', 'old_password'  %></td></tr><tr>
<td width="15%">新密码:</td>
<td><%= text_field 'user', 'new_password'  %></td></tr>
<tr>
<td>确认密码:</td>
<td><%= text_field 'user', 'new_password_confirm' %></td></tr>

    <%= hidden_field "user", "group_id",:value=>"#{session[:group_id]}"%>

<tr>
<td>&nbsp;</td>
<td><%= submit_tag "修改密码..!" %></td></tr>
</tbody></table>
<!--[eoform:user]-->
<% end_form_tag %>